#:kivy 1.11.1


<PencilColor@Button>:
	canvas.before:
		Color:
			rgb: (.32, .65, .82, 0.5)
		Line:
			width: dp(4)
			rectangle: self.x, self.y, self.width, self.height
	background_normal: ''


<SignatureScreen>:
    id: sig_screen
	drawing: drawing
    FloatLayout:
		canvas.before:
			Color:
				rgb: (1, 1, 1, 1)
			Rectangle:
				pos: self.pos
				size: self.size

	    Pencil:
			id: drawing
            sig_screen: sig_screen

		BoxLayout:
			spacing: dp(50)
			pos_hint: {"top": .2, "x": .1}
			size_hint: .2, .1
			PencilColor:
				background_color: (0, 0, 0, 1)
				on_press:
					root.give_black()

			PencilColor:
				background_color: (0.0, 0.0, 1.0, 1.0)
				on_release:
					root.give_blue()

		Label:
			canvas.before:
				Color:
					rgb: (0,1,0,1)
				Line:
					width: dp(5)
					points: 0.1*root.width,0.3*root.height,0.9*root.width,0.3*root.height

		ScaleButton:
			id: save
			background_normal: ''
			background_color: (1, 1, 1, 0.2)
			canvas.before:
				Color:
					rgba: (.32, .65, .82, 0.5)
				RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,]
			text: ' SPEICHERN '
			font_size: sp(18)
			bold: True
			color: 0, 0.8, 0.2, 1
			size_hint: 0.2, 0.1
			pos_hint: {"top": .2, "x": .5}
			on_press:
				root.save_sig()

		ScaleButton:
			id: delete
			background_normal: ''
			background_color: (1, 1, 1, 0.2)
			canvas.before:
				Color:
					rgba: (.32, .65, .82, 0.5)
				RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,]
			text: '  LÃ–SCHEN   '
			font_size: sp(18)
			bold: True
			color: 1, 0, 0, 1
			size_hint: .2, .1
			pos_hint: {"top": .2, "x": .73}
			on_press:
				root.clear_sig()

        ImageButton:
            size_hint: .1, .1
	        pos_hint: {"top": .9, "x": .1}
            source: os.path.join(os.getcwd(), 'icons', 'x.png')
	        on_release:
	            app.change_screen("home_screen", direction='right')
