<ScaleLabel@Label>:
	_scale: 1. if self.texture_size[1] < self.width else float(self.width) / self.texture_size[1]
	canvas.before:
		PushMatrix
		Scale:
			origin: self.center
			x: self._scale or 1.
			y: self._scale or 1.
	canvas.after:
		PopMatrix

<-ScaleButton@Button>:
	state_image: self.background_normal if self.state == 'normal' else self.background_down
	disabled_image: self.background_disabled_normal if self.state == 'normal' else self.background_disabled_down
	_scale: 1. if self.texture_size[0] < self.width else float(self.width) / self.texture_size[0]
	canvas:
		Color:
			rgba: self.background_color
		BorderImage:
			border: self.border
			pos: self.pos
			size: self.size
			source: self.disabled_image if self.disabled else self.state_image
		PushMatrix
		Scale:
			origin: self.center
			x: self._scale or 1.
			y: self._scale or 1.
		Color:
			rgba: self.disabled_color if self.disabled else self.color
		Rectangle:
			texture: self.texture
			size: self.texture_size
			pos: int(self.center_x - self.texture_size[0] / 2.), int(self.center_y - self.texture_size[1] / 2.)
		PopMatrix


<SidePanelBtn@ScaleButton>:
    bold: True
    font_size: 0.3 * self.height
    size_hint_y: .12
    color: 0,0,0,1
    background_normal: ''
    background_color: utils.get_color_from_hex("#FFFFFF") if self.state == 'normal' else utils.get_color_from_hex("#FFFFFF")


NavDemoWindow:
    anim_type: 'slide_above_anim'
    id: main_win
    side_panel_width:0.618*self.width

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgb: utils.get_color_from_hex("#000000")
            Rectangle:
                pos: self.pos
                size: self.size

        spacing: 5
        MyLabel:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#0A9146")
                Rectangle:
                    pos: self.pos
                    size: self.size
            text_size: None, None
            valign: 'middle'
            halign: 'center'
            text: 'MENÃœ'
            bold: True
            outline_width: 2
            size_hint_y: .15

        SidePanelBtn:
            text: '    Nachweis    '
            on_release:
                app.change_screen("home_screen")
                root.anim_to_state('closed')
        SidePanelBtn:
            text: '  Berichtsheft  '
            on_release:
                app.change_screen("overview_screen")
                app.update_overview_screen()
                root.anim_to_state('closed')
        SidePanelBtn:
            text: '     Design     '
            on_release:
                app.change_screen("design_screen")
                root.anim_to_state('closed')
        SidePanelBtn:
            text: '  Unterschrift  '
            on_release:
                app.change_screen("signature_screen")
                root.anim_to_state('closed')
        SidePanelBtn:
            text: ' Einstellungen '
            on_release:
                app.change_screen("settings_screen")
                root.anim_to_state('closed')
        BoxLayout:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex("#0A9146")
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: .19

    FloatLayout:
        GridLayout:
            # menue and pathname
            rows: 1
            pos_hint: {"top": 1, "x": 0}
            size_hint: 1, .1
            BoxLayout:
                spacing: 5
                ScaleButton:
                    on_release:
                        main_win.toggle_state()
                    size_hint_x: None
                    width: 50
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line:
                            width: 2
                            points: self.width/5, self.y+self.height*2/6, self.width*4/5, self.y+self.height*2/6
                        Line:
                            width: 2
                            points: self.width/5, self.y+self.height/2, self.width*4/5, self.y+self.height/2
                        Line:
                            width: 2
                            points: self.width/5, self.y+self.height*4/6, self.width*4/5, self.y+self.height*4/6
                    background_color: utils.get_color_from_hex("#0A9146")
                    background_normal: ''

                MyLabel:
                    id: menu_txt
                    text: 'NACHWEISE'
                    bold: True
                    color: 1, 1, 1, 1
                    canvas.before:
                        Color:
                            rgb: utils.get_color_from_hex("#0A9146")
                        Rectangle:
                            pos: self.pos
                            size: self.size
        ScreenManager:
            id: screen_manager
            HomeScreen:
                name: "home_screen"
                id: home_screen
            SettingsScreen:
                name: "settings_screen"
                id: settings_screen
            TemplateScreen:
                name: "template_screen"
                id: template_screen
            SignatureScreen:
                name: "signature_screen"
                id: signature_screen
            DesignScreen:
                name: "design_screen"
                id: design_screen
            InfoScreen:
                name: "info_screen"
                id: info_screen
            OverviewScreen:
                name: "overview_screen"
                id: overview_screen
            FinalizedBannerScreen:
                name: "finalizedbanner_screen"
                id: finalizedbanner_screen
