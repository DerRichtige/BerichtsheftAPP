#:kivy 1.11.1

<FinalizedBannerScreen>:
    FloatLayout:
        # Date from-to and back button
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#ffffff")
            Rectangle:
                pos: self.pos
                size: self.size
        pos_hint: {"top": .89, "x": 0}
        size_hint: 1, .1
        padding: 30, 10
        ImageButton:
            source: os.path.join(os.getcwd(), 'icons', 'Pfeil.png')
            on_release:
                app.change_screen("overview_screen", direction='right')
            size_hint: .4, .5
            pos_hint: {"center_y": .5, "center_x": .08}
        ScaleButton:
            id: title
            background_normal: ''
            background_color: 1, 1, 1, 1
            background_down: ''
            pos_hint: {"center_y": .5, "center_x": .5}
            size_hint: .7, .6
            color: 0,0,0,1
            text: "ERROR"
            padding: dp(12), dp(12)
            bold: True
            font_size: sp(30)
    FloatLayout:
        pos_hint: {"top": .78, "x": 0}
        ScrollView:
            pos_hint: {"top": 1, "x": 0}
            size_hint: 1, .83
            GridLayout:
                # pdfbanner grid
                id: pdfbanner_grid
                cols: 1
                spacing: 7
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '100dp'
                row_force_default: True
